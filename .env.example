# ========================================
# Django Settings - Romualdez Skin and Eye Clinic
# ========================================

# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# SECURITY WARNING: Don't run with debug turned on in production!
# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Database Configuration
# ========================================

# SQLite (Development - Default)
# No configuration needed, uses db.sqlite3 file

# PostgreSQL (Production - Recommended)
# Uncomment and configure for production:
# DATABASE_URL=postgresql://username:password@localhost:5432/clinicdb

# MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/clinicdb

# ========================================
# Static and Media Files
# ========================================

# Static files URL (CSS, JavaScript, Images)
STATIC_URL=/static/
# Production: Absolute path where collectstatic will collect files
# STATIC_ROOT=/var/www/clinic/static/

# Media files URL (User uploads)
MEDIA_URL=/media/
# Production: Absolute path for user uploaded files
# MEDIA_ROOT=/var/www/clinic/media/

# ========================================
# Email Configuration (Optional)
# ========================================

# SMTP Settings for sending emails
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# For development/testing (prints emails to console):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ========================================
# Security Settings (Production Only)
# ========================================

# Force HTTPS redirect (Enable in production with SSL)
# SECURE_SSL_REDIRECT=True

# Secure cookie settings (Enable in production with SSL)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# HTTP Strict Transport Security
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Security headers
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY

# ========================================
# Cache Configuration (Optional)
# ========================================

# Redis Cache (Recommended for production)
# REDIS_URL=redis://localhost:6379/1
# CACHE_BACKEND=django_redis.cache.RedisCache

# Memcached (Alternative)
# CACHE_BACKEND=django.core.cache.backends.memcached.PyMemcacheCache
# CACHE_LOCATION=127.0.0.1:11211

# ========================================
# Logging Configuration
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=/var/log/clinic/django.log

# ========================================
# Third-Party Services (Optional)
# ========================================

# Sentry Error Tracking
# SENTRY_DSN=your-sentry-dsn-here

# AWS S3 for Static/Media Files (Alternative to local storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ========================================
# Development Settings
# ========================================

# Django Debug Toolbar (Development only)
# ENABLE_DEBUG_TOOLBAR=True

# Show SQL queries in console (Development only)
# SHOW_SQL_QUERIES=False

